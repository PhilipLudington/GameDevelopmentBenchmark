 int scenario_building_allowed(building_type type)
 {
+    // Check individual building restrictions before menu group
+    switch (type) {
+        // Small temples
+        case BUILDING_SMALL_TEMPLE_CERES:
+        case BUILDING_SMALL_TEMPLE_NEPTUNE:
+        case BUILDING_SMALL_TEMPLE_MERCURY:
+        case BUILDING_SMALL_TEMPLE_MARS:
+        case BUILDING_SMALL_TEMPLE_VENUS:
+            if (!data.building_allowed[type]) {
+                return 0;
+            }
+            break;
+
+        // Large temples
+        case BUILDING_LARGE_TEMPLE_CERES:
+        case BUILDING_LARGE_TEMPLE_NEPTUNE:
+        case BUILDING_LARGE_TEMPLE_MERCURY:
+        case BUILDING_LARGE_TEMPLE_MARS:
+        case BUILDING_LARGE_TEMPLE_VENUS:
+            if (!data.building_allowed[type]) {
+                return 0;
+            }
+            break;
+
+        // Forts
+        case BUILDING_FORT_LEGIONARIES:
+        case BUILDING_FORT_JAVELIN:
+        case BUILDING_FORT_MOUNTED:
+            if (!data.building_allowed[type]) {
+                return 0;
+            }
+            break;
+
+        // Farms
+        case BUILDING_WHEAT_FARM:
+        case BUILDING_VEGETABLE_FARM:
+        case BUILDING_FRUIT_FARM:
+        case BUILDING_OLIVE_FARM:
+        case BUILDING_VINES_FARM:
+        case BUILDING_PIG_FARM:
+            if (!data.building_allowed[type]) {
+                return 0;
+            }
+            break;
+
+        // Raw materials and workshops would be handled similarly
+        // ...
+
+        default:
+            break;
+    }
+
+    // Check menu group
     int group = get_menu_group(type);
     return data.menu_allowed[group];
 }
